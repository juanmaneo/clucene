#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

include /usr/share/quilt/quilt.make

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	# Add here commands to clean up after the build process.
	rm -rf builddir
	rm -rf tools/htmlToXBel/.rcc/qrc_source.cpp
	find . -name .obj | xargs rm -rf

	dh_clean

build: build-stamp

run_cmake: patch
	cmake CMakeLists.txt -DBUILD_CONTRIBS:BOOL=ON -DBUILD_CONTRIBS_LIB:BOOL=ON -DCMAKE_BUILD_TYPE:STRING=Release -DCMAKE_INSTALL_PREFIX:PATH=$(CURDIR)/debian/clucene/usr/local

build-stamp: run_cmake
	dh_testdir

	# Add here commands to compile the package.
	$(MAKE) clucene-contribs-lib -j4

	touch $@

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the package into debian/moltaqa-lib
	$(MAKE) install
	cd $(CURDIR)/src/contribs-lib && $(MAKE) install

#binary-indep: install
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch: install
	#dh_installdocs -a NEWS
	#dh_installchangelogs -a ChangeLog
	#dh_installinfo -a doc/*.info
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	#dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-arch #binary-indep

.PHONY: binary binary-arch binary-indep clean
